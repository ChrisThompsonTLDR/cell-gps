#!/bin/bash

# Installation
# 1.  Update dreamhost web root to /[domain]/public
# 2.  Add /usr/local/php54/bin/ to PATH in .bash_profile: export PATH=/usr/local/php54/bin:$PATH
# 3.  Add ~/.php/5.4/phprc with: extension=intl.so
# 4.  cd web root
# 5.  rm -rf *
# 6.  git clone https://github.com/emenendez/cell-gps.git .
# 7.  git checkout [branch]
# 8.  From client: ./deploy
# 9.  php artisan migrate:install
# 10. php artisan migrate
# 11. php artisan config:cache
# 12. php artisan route:cache
rsync -r vendor/ asrc_gps@gps.asrc.net:gps.asrc.net/vendor
scp .env.php asrc_gps@gps.asrc.net:gps.asrc.net/
